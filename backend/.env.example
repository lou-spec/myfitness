# MongoDB Atlas Connection String (Render/Production)
# Obter em: MongoDB Atlas > Connect > Connect your application
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/myfitness?retryWrites=true&w=majority
# OU (Render pode usar MONGODB_URI)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/myfitness?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_jwt_secret_here_change_this_in_production

# Server
PORT=5000
NODE_ENV=production

# Email (Gmail)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# Frontend URL (para CORS)
# Development: http://localhost:5173
# Production (Vercel): https://myfitness-neon.vercel.app
FRONTEND_URL=https://myfitness-neon.vercel.app

# Stripe Keys (obter em https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (criar em https://dashboard.stripe.com/products)
# Criar produtos e preços recorrentes mensais:
# Básico: €15/mês
STRIPE_BASIC_PRICE_ID=price_xxxxxxxxxxxxx

# Pro: €30/mês  
STRIPE_PRO_PRICE_ID=price_xxxxxxxxxxxxx

# Premium: €50/mês
STRIPE_PREMIUM_PRICE_ID=price_xxxxxxxxxxxxx
